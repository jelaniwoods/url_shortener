<%= form_with(model: @url, local: true) do |f| %>

  <div class="form-group">
    <%= f.label :url %>

    <%= f.text_field :url, class: "form-control" %>
  </div>

  <%= f.hidden_field :user_id, value: @user.id %>

  <%= f.submit "Create url", class: "btn btn-block btn-outline-secondary" %>
<% end %>
